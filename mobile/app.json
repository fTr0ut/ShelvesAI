{
  "expo": {
    "name": "Shelves.AI",
    "slug": "shelves-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "shelvesai",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0b0f14"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Shelves.AI to capture your shelves.",
        "NSPhotoLibraryUsageDescription": "Allow Shelves.AI to import shelf photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0b0f14"
      },
      "package": "com.shelvesai.app",
      "softwareKeyboardLayoutMode": "resize",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Shelves.AI to access your collection photos.",
          "cameraPermission": "Allow Shelves.AI to capture your shelves."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "fc24bb32-ca24-4e79-b843-c87916d0f3de"
      }
    }
  }
}
